<section class="form-01-main position-relative">
    <div class="form-cover">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-sub-main mt-5">
                        <div class="_main_head_as">
                            <img src="/assets/images/admin.png">
                        </div>
                        {{#if error}}
                            <div class="alert alert-danger mb-4">{{error}}</div>
                        {{/if}}
                        <form action="/auth/login" method="post" autocomplete="off">
                            <div class="form-group">
                                <input
                                    id="username"
                                    name="username"
                                    class="form-control form-input fs-6 mb-3"
                                    type="text"
                                    placeholder="Login"
                                    value="{{loginVal}}"
                                />
                            </div>

                            <div class="form-group">
                                <input 
                                    id="password" 
                                    type="password" 
                                    class="form-control form-input fs-6 mb-3" 
                                    name="password"    
                                    placeholder="Parol"
                                />
                            </div>

                            <div class="form-group">
                                <div class="check_box_main">
                                    <a href="http://t.me/yuldoshev_uz" target="_blank" class="pas-text">Parolni unutdim</a>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn border-button mt-4">Kabinetga kirish</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>