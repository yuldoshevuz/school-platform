<section class="form-01-main position-relative">
    <div class="form-cover">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-sub-main mt-5">
                        <div class="_main_head_as">
                            <img src="/assets/images/admin.png">
                        </div>
                        {{#if error}}
                            <div class="alert alert-danger mb-3">{{error}}</div>
                        {{/if}}
                        <form action="/auth/register/confirm" method="post" autocomplete="off">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="text-start" for="full_name">Ism</label>
                                        <input
                                            id="full_name"
                                            name="full_name"
                                            class="form-control form-input fs-6 mb-3"
                                            type="text"
                                            placeholder="To'liq ismingiz (Eshmat Toshmatov)"
                                            value="{{authData.full_name}}"
                                            disabled
                                        />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="text-start" for="email">Email</label>
                                        <input
                                            id="email"
                                            name="email"
                                            class="form-control form-input fs-6 mb-3"
                                            type="email"
                                            placeholder="E-pochta manzilingiz"
                                            value="{{authData.email}}"
                                            disabled
                                        />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="text-start" for="code">Kodni kiriting</label>
                                        <input
                                            id="code"
                                            name="code"
                                            class="form-control form-input fs-6 mb-0"
                                            type="number"
                                            placeholder="Kod"
                                            value=""
                                        />
                                        <small class="text-white">Elektron pochtangizga kod yuborildi. Marhamat kodni kiriting</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn border-button mt-4">Tasdiqlash</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>