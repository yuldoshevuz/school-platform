<div class="content-wrapper overflow-auto">
    
    <section class="content">
        <div class="container-fluid">
            <div class="single-news-blog">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-8">
                            <section class='tabs-content'>
                                <div class="card">
                                    <div class="card-body">
                                        <img class="img-fluid" src="{{article.image_url}}" alt="{{article.title}}">
                                        <h2 class="my-3">{{article.title}}</h2>
                                        
                                        <p class="text-style fst-italic">{{article.description}}</p>
                                        <p class="fs-5 fw-bold text-end mt-3">{{article.author.full_name}} <i class="fa-solid fa-pen-clip"></i></p>
                                    </div>
                                    <div class="card-footer">
                                        <p class="text-style my-3"><i class="fa-solid fa-calendar-days"></i> {{parseDate article.createdAt}}</p>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>