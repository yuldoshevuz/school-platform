<div class="content-wrapper overflow-auto">
    {{>dashboard/content-header}}

    <section class="content">
        <div class="container-fluid">
            {{#if messages}}
            <!-- Direct-chat -->
            <div class="card card-success direct-chat direct-chat-success d-flex flex-column">
                <div class="card-header bg-default">
                    <h3 class="card-title m-0">Kiruvchi xabarlar</h3>
                    <div class="card-tools">
                        <span data-toggle="tooltip" title="{{lengthMsg}} New Messages" class="badge badge-light text-default">{{lengthMsg}}</span>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-toggle="tooltip" title="Contacts"
                            data-widget="chat-pane-toggle">
                            <i class="fas fa-comments"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <!-- Conversations are loaded here -->
                    <div class="direct-chat-messages">
                        <!-- Message. Default to the left -->
                        <div class="direct-chat-msg">
                            <div class="direct-chat-infos clearfix">
                                <span class="direct-chat-name float-left">{{message.name}}</span>
                                <span class="direct-chat-timestamp float-right">{{parseDate message.createdAt}}</span>
                            </div>
                            <!-- /.direct-chat-infos -->
                            <img class="direct-chat-img" src="/assets/images/admin.png"
                                alt="message user image">
                            <!-- /.direct-chat-img -->
                            <div class="direct-chat-text">
                                Yangi xabar!
                                <br> <br>
                                <b>Ism:</b> {{message.name}} <br>
                                <b>Email:</b> {{message.email}} <br>
                                <b>Mavzu:</b> {{message.subject}} <br> <br>
                                <b>Xabar:</b>  <i>{{message.message}}</i>
                            </div>
                            <!-- /.direct-chat-text -->
                        </div>
                    </div>
                    <!--/.direct-chat-messages-->
                    <!-- Contacts are loaded here -->
                    <div class="direct-chat-contacts">
                        <ul class="contacts-list">
                            {{#each messages}}
                               <li>
                                    <a href="/dashboard/messages/{{this._id}}">
                                        <img class="contacts-list-img" src="/assets/images/admin.png">
                                        <div class="contacts-list-info">
                                            <span class="contacts-list-name">
                                                {{this.name}}
                                                <small class="contacts-list-date float-right">{{parseDate this.createdAt}}</small>
                                            </span>
                                            <span class="contacts-list-msg">{{shortMessage this.message}}</span>
                                        </div>
                                        <!-- /.contacts-list-info -->
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                        <!-- /.contacts-list -->
                    </div>
                    <!-- /.direct-chat-pane -->
                </div>
                <!-- /.card-body -->
                {{!-- <div class="card-footer">
                    <form action="#" method="post">
                        <div class="input-group">
                            <input type="text" name="message" placeholder="Type Message ..." class="form-control">
                            <span class="input-group-append">
                                <button type="button" class="btn btn-success">Send</button>
                            </span>
                        </div>
                    </form>
                </div> --}}
                <!-- /.card-footer-->
            </div>
            <!--/Direct-chat -->
            {{else}}
                <div class="alert alert-success mt-4">Hozircha xabarlar mavjud emas!</div>      
            {{/if}}

        </div>
    </section>
</div>