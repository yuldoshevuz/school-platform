<div class="callback-form {{#if isContact}}contact-us{{/if}}">
    <div class="container">
        <div class="row juftify-content-center">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2 class="fs-1">Bizga xabar <em>yuboring</em></h2>
                    <span class="fs-6">MARHAMAT FIKRINGIZNI QOLDIRING. FIKRINGIZ BIZ UCHUN MUHIM</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form p-4 p-md-5">
                    <form id="contact" action="/send_message" method="post">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input
                                        name="name"
                                        type="text"
                                        class="form-control
                                        form-input fs-6"
                                        id="name"
                                        placeholder="Ismingiz"
                                        value="{{sessionData.name}}"
                                    />
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input
                                        name="email"
                                        type="text"
                                        class="form-control form-input fs-6"
                                        id="email"
                                        pattern="[^ @]*@[^ @]*"
                                        placeholder="Elektron pochta"
                                        value="{{sessionData.email}}"
                                    />
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input
                                        name="subject"
                                        type="text"
                                        class="form-control form-input fs-6"
                                        id="subject"
                                        placeholder="Mavzu"
                                        value="{{sessionData.subject}}"
                                    />
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <textarea
                                        name="message"
                                        rows="6"
                                        class="form-control form-textarea fs-6"
                                        id="message"
                                        placeholder="Xabaringiz">{{sessionData.message}}</textarea>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="{{#if isContact}}filled-button{{else}}border-button{{/if}}">Xabar yuborish</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    {{#if error}} alert("{{{error}}}") {{/if}}
    {{#if success}} alert("{{{success}}}") {{/if}}
</script>