<div class="single-news-blog">
    <div class="container">
        {{#if news}}
        <div class="row flex-column-reverse flex-md-row" id="blog">
            <div class="col-md-4 mt-5 mt-md-0">
                <ul>
                    {{#each news}}
                    <li>
                        <a href='#blog-{{this._id}}'>{{this.title}}
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-8">
                <section class='tabs-content w-100'>
                    {{#each news}}
                    <article id='blog-{{this._id}}'>
                        <div class="news-image-container">
                            <img src="{{this.image_url}}" alt="{{this.title}}">
                        </div>
                        <p class="fs-6 my-3"> <i class="fa-solid fa-calendar-days"></i> {{parseDate this.createdAt}}</p>
                        <h2 class="mb-3 fw-bold text-default">{{this.title}}</h2>
                        
                        <p class="text-style fst-italic">{{this.description}}</p>
                        <hr>
                        <p class="fs-5 text-end fw-bold mt-3">{{this.author.full_name}} <i class="fa-solid fa-pen-clip"></i></p>
                    </article>
                    {{/each}}
                </section>
            </div>
        </div>
        {{else}}
        <div class="alert alert-success">Hozircha yangiliklar mavjud emas</div>
        {{/if}}
    </div>
</div>