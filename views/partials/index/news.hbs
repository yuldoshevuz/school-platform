<div class="single-news-blog">
    <div class="container">
        {{#if news}}
        <div class="row flex-column-reverse flex-md-row" id="tabs">
            <div class="col-md-4 mt-5 mt-md-0">
                <ul>
                    {{#each news}}
                    <li>
                        <a href='#tabs-{{this._id}}'>{{this.title}}
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-8">
                <section class='tabs-content w-100'>
                    {{#each news}}
                    <article id='tabs-{{this._id}}'>
                        <div class="news-image-container">
                            <img src="{{this.image_url}}" alt="{{this.title}}">
                        </div>
                        <p class="fs-6 my-3"> <i class="fa-solid fa-calendar-days"></i>{{parseDate this.date}}</p>
                        <h2 class="mb-3">{{this.title}}</h2>
                        
                        <p class="text-style fst-italic">{{this.description}}</p>
                        <p class="fs-5 mt-3 text-success">Yozdi: {{userName this.user_id}}</p>
                    </article>
                    {{/each}}
                </section>
            </div>
        </div>
        {{else}}
        <div class="alert alert-success">Hozircha yangiliklar mavjud emas</div>
        {{/if}}
    </div>
</div>